@using NewsUa.Models.ViewModel
@model EditEmailModel
@{
    Layout = "~/Views/Shared/_N_Layout.cshtml";
    ViewBag.Title = "Редашування Email";
}
<div class="row " style="margin:10px 0;padding:20px;">
    @using (Html.BeginForm("EditEmail", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new
    {
        @id = "postForm",
        @class = "col l6 m10 s12 white z-depth-5 offset-l3 offset-m1",
        role = "form",
        style = "padding:30px;"
        //,onsubmit = "accept.disabled = true; accept.value = 'Loading...'; return true;"
    }))
    {
        <div class="row">
            @Html.AntiForgeryToken()
            <div class="input-field col s12">
                @Html.EditorFor(model => model.Email)
                @Html.LabelFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "red-text" })
            <div class="input-field col s12">
                <input type="submit" class="waves-effect waves-light btn blue-grey lighten-1" value="Зберегти" name="accept" style="margin-bottom:20px;" /><br />
                @Html.ActionLink("На головну", "Index", "News")
            </div>
        </div>
    }
</div>
