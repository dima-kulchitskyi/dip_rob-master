
@using NewsWebSite.Models.ViewModel
@model LoginViewModel
@{
    Layout = "~/Views/Shared/Lay.cshtml";
    ViewBag.Title = "Log in";
}
<div class="row " style="margin:10px 0;padding:20px;">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col l6 m10 s12 white z-depth-1 offset-l3 offset-m1", role = "form", style = "padding:30px;" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="input-field col s12">
                @Html.LabelFor(m => m.Email, new { @class = "label-text" })
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.LabelFor(m => m.Password, new { @class = "label-text" })
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        @*<div class="row">
            <div class="input-field col s12">
                @Html.LabelFor(m => m.RememberMe)
                @Html.CheckBoxFor(m => m.RememberMe, new { type = "checkbox" })
            </div>
        </div>
        <br />*@
        @Html.ValidationSummary(true, "", new { @class = "red-text" })

        <div class="row">
            <div class="input-field col s12">
                <input type="submit" class="waves-effect waves-light btn" value="Войти" style="margin-bottom:20px;" /><br />
                @Html.ActionLink("Зарегистрироваться", "Register")<br />
            </div>
        </div>
        @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}